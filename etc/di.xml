<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="infobase_customermovie_movie_listing_data_source"
                      xsi:type="string">Infobase\CustomerMovie\Model\ResourceModel\Movie\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <type name="Infobase\CustomerMovie\Model\ResourceModel\Movie\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">infobase_customer_movie</argument>
            <argument name="eventPrefix" xsi:type="string">size_data_sizegrid_collection</argument>
            <argument name="eventObject" xsi:type="string">size_data_sizegrid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Infobase\CustomerMovie\Model\ResourceModel\Movie</argument>
        </arguments>
    </type>

    <virtualType name="MovieGridDataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Infobase\CustomerMovie\Model\ResourceModel\Movie\Grid\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool</argument>
        </arguments>
    </virtualType>

</config>
